<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FF81"
    android:backgroundTint="#F5FF87"
    tools:context=".Ruleta">

    <ImageView
        android:id="@+id/ruleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/bRuleta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ruleta" />

    <ImageView
        android:id="@+id/ruleta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:rotation="@dimen/material_emphasis_medium"
        app:layout_constraintBottom_toTopOf="@+id/bRuleta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ruleta2" />

    <Button
        android:id="@+id/bRuleta"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginBottom="48dp"
        android:background="@color/black"
        android:backgroundTint="#CCFF90"
        android:text="Â¡Gira la ruleta!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>